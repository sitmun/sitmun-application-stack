<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>SitmunViewerApp</title>
    <base href="${PUBLIC_BASE_PATH}viewer/">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <script src="assets/js/d3/d3.js"></script>
    <script>
      // Define SITNA_BASE_URL before any modules load (required by SITNA documentation)
      // This ensures it's available when api-sitna module is imported
      window.SITNA_BASE_URL = 'assets/js/api-sitna/';
      globalThis.SITNA_BASE_URL = 'assets/js/api-sitna/';
    </script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {

          navigator.serviceWorker.getRegistration().then(function(reg) {
            if (reg && reg.active && !navigator.serviceWorker.controller) {
              window.location.reload();
            }
          });

          navigator.serviceWorker.register('ServiceWorker.js', { scope: '${PUBLIC_BASE_PATH}viewer/'})
            .then(() => {
              console.log("SITMUN Service worker registered");
            })
            .catch((error) => {
              console.error("SITMUN Service worker registration failed:", error);
            })
        });
      } else {
        console.log("SITMUN Service worker not supported");
      }
    </script>
    <link rel="stylesheet" href="assets/js/toastr/toastr.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="assets/js/toastr/toastr.min.js"></script>
  </head>
  <body>
    <app-root></app-root>
  </body>
</html>
